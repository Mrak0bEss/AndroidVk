<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        android:layout_marginRight="130dp"
        android:gravity="center"
        app:cardCornerRadius="100dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- add a Image image.png in your Drawable folder -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_boy" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/your_name"
        android:textColor="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="45dp"
        app:layout_constraintLeft_toRightOf="@id/cardView"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        android:layout_marginRight="130dp"
        android:gravity="center"
        app:cardCornerRadius="100dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView">
        <!-- add a Image image.png in your Drawable folder -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/rgb" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_cat_name2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:maxWidth="350dp"
        android:text="@string/long_name"
        android:textColor="@color/white"
        android:singleLine="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="45dp"
        app:layout_constraintLeft_toRightOf="@id/cardView2"
        app:layout_constraintTop_toBottomOf="@id/text_view_cat_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>
